linkDiv = document.getElementById('save-excuse-link');
if (linkDiv && @creative_excuse) {
  linkDiv.innerHTML = `<%= link_to creative_excuse_saved_excuses_path(@creative_excuse), method: :post, remote: true do %>
                        <i id="heart" class="far fa-heart fa-3x" style="color: #FFBA34;"></i>
                       <% end %>`;
} else {
  linkDiv.innerHTML = `<%= link_to location_excuse_saved_excuses_path(@location_excuse), method: :post, remote: true do %>
                        <i id="heart" class="far fa-heart fa-3x" style="color: #FFBA34;"></i>
                       <% end %>`;
}
