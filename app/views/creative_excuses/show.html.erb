<div class="container" style="background-image: url('<%= asset_url 'bgnodog.png' %>'); background-position: bottom; background-size: cover; width: 100vw; height: 92.25vh;justify-content: center;" id="data" data-signed=<%= user_signed_in? %>>
  <div class="parent-center" style="justify-content: center;">
    <h5>Excuse Found!</h5>
    <br>
    <%= @creative_excuse.icon %>
    <div class="">
    <h3 class="mt-3 text-center"> <%= @creative_excuse.title %></h3>
    </div>
    <p class="text-center"><%= @creative_excuse.description %><p>
    <div class="width-100 d-flex justify-content-around align-items-center">
      <%= link_to "Give me something else", creative_excuse_path(@random_excuse), class: "btn btn-intro mt-3"  %>
      <% saved_excuse = SavedExcuse.find_by(user: current_user, excuse: @creative_excuse) %>
      <div id="save-excuse-link">
        <% if saved_excuse %>
        <%= link_to saved_excuse_path(saved_excuse), method: :delete, remote: true do %>
          <i id="heart" class="fas fa-heart fa-3x"></i>
        <% end %>
      <% else %>
        <%= link_to creative_excuse_saved_excuses_path(@creative_excuse), method: :post, remote: true do %>
          <i id="heart" class="far fa-heart fa-3x"></i>
        <% end %>
      <% end %>
      </div>

    <div id="creative-excuse-instance" style="display: none"><%= @creative_excuse %></div>

    <div id="saving-unsaving" style="display: none;">

    </div>

    <%# if !@saved_excuse.id %>
      <%#= simple_form_for [@creative_excuse, @saved_excuse] do |f| %>
