<div class="container" style="background-image: url('<%= asset_url 'bgnodog.png' %>'); background-position: bottom; background-size: cover; width: 100vw; height: 92.25vh;justify-content: center;" id="data" data-signed=<%= user_signed_in? %>>
  <div class="parent-center" style="justify-content: center;">
    <h5>Excuse Found!</h5>
    <br>
    <%= @creative_excuse.icon %>

    <p class="text-center"><%= @creative_excuse.description %><p>
    <div class="width-100">
      <% saved_excuse = SavedExcuse.find_by(user: current_user, excuse: @creative_excuse) %>

      <%= link_to "Give me something else", creative_excuse_path(@random_excuse), class: "btn btn-intro mt-3 width-100"  %>

      <div id="save-excuse-link" style="margin-top: 32px; text-align: center;">
        <% if current_user.nil? %>
          <%= link_to user_session_path do %>
            <i id="heart" class="far fa-heart fa-3x" style="color: #FFBA34;"></i>
          <% end %>
        <% else %>
          <% if saved_excuse %>
            <%= link_to saved_excuse_path(saved_excuse, type: 'creative'), method: :delete, remote: true do %>
              <i id="heart" class="fas fa-heart fa-3x" style="color: #FFBA34;"></i>
            <% end %>
          <% else %>
            <%= link_to creative_excuse_saved_excuses_path(@creative_excuse, type: 'creative'), method: :post, remote: true do %>
              <i id="heart" class="far fa-heart fa-3x" style="color: #FFBA34;"></i>
            <% end %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>


