<body style="background-image: url('<%= asset_url 'bgnodog.png' %>'); background-position: bottom; background-size: cover; width: 100vw; height: 100vh;">
  <div class="container parent-center mt-4" style="justify-content: center;">
    <h2 class="" style="font-weight: 100">REPORT AN EXCUSE</h1>
    <div class="width-100">
      <%= simple_form_for @reported_excuse do |f| %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.input :address %>
        <%= f.input :category, collection: ["Select Category","malfunction","pets","health","family", "funny","other"] %>
        <%= f.button :submit, "REPORT EXCUSE", class: "btn btn-wide" %>
      <% end %>
    </div>
  </div>
</body>
