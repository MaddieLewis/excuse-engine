<div class="container">
  <div class="width-100 text-center">
    <h4 class="mt-3"><%=  @user.first_name  %> </h4>
    <h4 class="mb-5"><%= @user.last_name  %></h4>
    <% if @user.saved_excuses.count <= 3 %>
      <h3>Level 1</h3>
    <% elsif @user.saved_excuses.count > 3 && @user.saved_excuses.count <= 5 %>
      <h3>Level 2</h3>
    <% elsif @user.saved_excuses.count > 5 && @user.saved_excuses.count <= 10 %>
      <h3>Level 3</h3>
    <% elsif @user.saved_excuses.count > 10 && @user.saved_excuses.count <= 15 %>
      <h3>Level 4</h3>
    <% elsif @user.saved_excuses.count > 15 %>
      <h3>Level 5</h3>
    <% end %>
    <h3 style="color: #9CF0F5">Procrastinator</h3>
    <h6 class="mt-100 mb-3">Lifetime Statistics</h6>
    <div class="d-flex justify-content-center">
      <h4 style="color: #FFBA34" class="mr-2"><%= @user.saved_excuses.count %></h4>
      <p><%= 'excuse'.pluralize(@user.saved_excuses.count) %> saved</p>
    </div>
    <div class="d-flex justify-content-center">
      <h4 style="color: #FFBA34" class="mr-2"><%= @user.creative_excuses.count %></h4>
      <p><%= 'excuse'.pluralize(@user.creative_excuses.count) %> created</p>
    </div>

    <div class="border-top border-secondary  mt-100">
      <h6 class="mt-100 mb-3">Favorite Excuses</h6>
      <% @user.saved_excuses.each do |saved_excuse|  %>
        <% if saved_excuse.excuse_type == "CreativeExcuse" %>
          <p><%= saved_excuse.excuse.title %></p>
        <% else %>
          <p><%= "Say something different" %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
